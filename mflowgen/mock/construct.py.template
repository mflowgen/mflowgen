import os

from mflowgen.components import Graph, Node

def construct():

  g = Graph()

  #-----------------------------------------------------------------------
  # Create nodes
  #-----------------------------------------------------------------------

  this_dir = os.path.dirname( os.path.abspath( __file__ ) )

  push = Node( this_dir + '/mock-push' )
  dut  = Node( '{path}'  )  # Node under test

  #-----------------------------------------------------------------------
  # Adjust push node
  #-----------------------------------------------------------------------

  push.extend_outputs( dut.all_inputs() )

  push.update_params( {{
    'cmd' : '"' + ' && '.join( [ 'touch outputs/' + _ \
                              for _ in dut.all_inputs() ] ) + '"'
  }} )

  #-----------------------------------------------------------------------
  # Parameters
  #-----------------------------------------------------------------------

  parameters = {{}}

  #-----------------------------------------------------------------------
  # Graph -- Add nodes
  #-----------------------------------------------------------------------

  g.add_node( push )
  g.add_node( dut  )

  #-----------------------------------------------------------------------
  # Graph -- Add edges
  #-----------------------------------------------------------------------

  g.connect_by_name( push, dut )

  #-----------------------------------------------------------------------
  # Parameterize
  #-----------------------------------------------------------------------

  g.update_params( parameters )

  return g


